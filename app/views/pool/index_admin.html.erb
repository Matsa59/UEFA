<% content_for 'header' do %>
    <h2>Listes des poules</h2>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Poules</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                  <col width="auto">
                  <col width="100px">
                  <thead>
                  <tr role="row">
                    <th class="sorting" tabindex="0" rowspan="1" colspan="1">Nom</th>
                    <th rowspan="1" colspan="1">Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @pools.each do |pool| %>
                      <tr role="row" class="odd">
                        <td><%= pool.name %></td>
                        <td>
                          <%= link_to pool_edit_path(pool), data: {no_turbolink: true} do %>
                            <span class="glyphicon glyphicon-edit"></span>
                          <% end %>
                          <%= link_to pool_delete_path(pool), method: :delete, data: { confirm: 'Êtes vous sûr?' } do %>
                            <span class="glyphicon glyphicon-remove-circle red" aria-hidden="true"></span>
                          <% end %>
                        </td>
                      </tr>
                  <% end %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th rowspan="1" colspan="1">Nom</th>
                    <th rowspan="1" colspan="1">Actions</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->

  <%= link_to 'Ajouter une poule', pool_new_path, class: 'btn btn-primary' %>
</section>


