<% content_for :header do %>
    <h2>Modifier "<%= @prize.name %>"</h2>
<% end %>

<div class="col-xs-6">
  <div class="box box-primary">
    <%= form_for :prize, url: prize_update_path(@prize), method: :patch do |f| %>
        <div class="box-body">
          <div class="form-group">
            <label>Nom du lot</label>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Entrez le nom du lot' %>
            <label>Description du lot</label>
            <%= f.text_field :description, class: 'form-control', placeholder: 'Entrez une description du lot' %>
            <label>Quantité</label>
            <%= f.text_field :quantity, class: 'form-control' %>
            <label>Rérérence</label>
            <%= f.text_field :ref, class: 'form-control' %>

            <%= f.label :image %>
            <%= f.file_field :image, class: 'form-control'%>
          </div>
        </div>

        <div class="box-footer">
          <%= f.submit value: 'Enregistrer', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>