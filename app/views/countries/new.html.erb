<% content_for :header do %>
  <h2>Ajouter un nouveau pays</h2>
<% end %>

<div class="col-xs-6">
  <div class="box box-primary">
    <%= form_for :country, url: country_create_path do |f| %>
      <div class="box-body">
        <div class="form-group">
          <label>Nom du pays</label>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Entrez le nom du pays' %>
        </div>
      </div>

      <div class="box-footer">
        <%= f.submit value: 'Enregistrer', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
