<% content_for 'header' do %>
    <h2>Listes des stades</h2>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Hover Data Table</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                  <col width="auto">
                  <col width="100px">
                  <thead>
                  <tr role="row">
                    <th class="sorting" tabindex="0" rowspan="1" colspan="1">Nom du stade</th>
                    <th class="middle" rowspan="1" colspan="1">Adresse</th>
                    <th class="actions" rowspan="1" colspan="1">Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @stades.each do |stade| %>
                      <tr role="row" class="odd">
                        <td><%= stade.name %></td>
                        <td><%= stade.address %></td>
                        <td>
                          <%= link_to stade_edit_path(stade), data: {no_turbolink: true} do %>
                              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                          <% end %>

                          <%= link_to stade_delete_path(stade), method: :delete, data: { confirm: 'ÃŠtes vous sÃ»r?' } do %>
                              <span class="glyphicon glyphicon-remove-circle red" aria-hidden="true"></span>
                          <% end %>
                        </td>
                      </tr>
                  <% end %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th rowspan="1" colspan="1">Nom du stade</th>
                    <th class="middle" rowspan="1" colspan="1">Adresse</th>
                    <th class="actions" rowspan="1" colspan="1">Actions</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->

  <%= link_to 'Ajouter un stade', stade_new_path, class: 'btn btn-primary' %>
</section>


